<?xml version="1.0"?>
<csp_whitelist
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd"
>
    <policies>
        <policy id="script-src">
          <values>
            <value id="prism.app-us1.com" type="host">*.prism.app-us1.com</value>
            <value id="prismic.io" type="host">*.prismic.io</value>
          </values>
      </policy>
      <policy id="connect-src">
          <values>
            <value id="prism.app-us1.com" type="host">*.prism.app-us1.com</value>
            <value id="prismic.io" type="host">*.prismic.io</value>
          </values>
      </policy>
      <policy id="img-src">
          <values>
            <value id="prism.app-us1.com" type="host">*.prism.app-us1.com</value>
            <value id="prismic.io" type="host">*.prismic.io</value>
          </values>
      </policy>
    </policies>
</csp_whitelist>
