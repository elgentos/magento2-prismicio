{
    "name": "elgentos/module-prismicio",
    "description": "Magento 2 - Prismic.io integration",
    "type": "magento2-module",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Jeroen Boersma",
            "email": "jeroen@elgentos.nl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "prismic/php-sdk": "^5.1.2",
        "magento/framework": "*"
    },
    "replace": {
        "elgentos/prismic-io": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "autoload": {
        "psr-4": { "Elgentos\\PrismicIO\\": "" },
        "files": [ "registration.php" ]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "mediact/testing-suite": true,
            "mediact/coding-standard-phpstorm": true,
            "mediact/composer-unclog-plugin": true
        }
    }
}
