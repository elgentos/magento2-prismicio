{
    "name": "elgentos/module-prismicio",
    "description": "Magento 2 - Prismic.io integration",
    "type": "magento2-module",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Jeroen Boersma",
            "email": "jeroen@elgentos.nl"
        },
        {
            "name": "Arjen Miedema",
            "email": "arjen@elgentos.nl"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-intl": "*",
        "ext-json": "*",
        "magento/framework": "^103.0",
        "magento/module-catalog": "^104.0",
        "magento/module-store": "^101.1",
        "prismic/php-sdk": "^5.1"
    },
    "replace": {
        "elgentos/prismic-io": "*"
    },
    "autoload": {
        "files": [
            "src/registration.php"
        ],
        "psr-4": {
            "Elgentos\\PrismicIO\\": "src"
        }
    },
    "require-dev": {
        "mediact/testing-suite": "@stable",
        "mediact/coding-standard-magento2": "@stable"
    },
    "autoload-dev": {
        "psr-4": {
            "Elgentos\\PrismicIO\\Tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/grumphp.yml",
            "/pdepend.xml",
            "/phpstan.neon",
            "/phpunit.xml",
            "/phpcs.xml",
            "/phpmd.xml",
            "/package.json",
            "/.eslintrc.json",
            "/.eslintignore",
            "/tests"
        ]
    },
    "config": {
        "sort-packages": true,
        "mediact-testing-suite": {
            "type": "magento2"
        }
    }
}
